<Window x:Class="Diplom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <WrapPanel Name="wpTop" Grid.Row="0">
            <Label Content="Поиск:" Height= "{Binding ElementName=wpTop,Path=ActualHeight}"/>
            <TextBox Name="txbSearch" Width="200"/>
            <Label Content="Фильтр:"/>
            <TextBox Name="txtFill" Width="200"/>
        </WrapPanel>
        <WrapPanel Name="wpBot" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="btnFile" Content="Выбрать файл" Click="btnFile_Click"/>
            <Button Name="btnSql" Content="Создать базу данных" Click="btnSql_Click"/>
            <Button Name="btnjSON" Content="Сформировать jSON" Click="btnjSON_Click"/>
        </WrapPanel>
        <TextBox Name="txbFile" Grid.Row="1"/>
        <DataGrid Name="dtgView" Grid.Row="1">
        </DataGrid>
    </Grid>
</Window>
